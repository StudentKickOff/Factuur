.content
  h1 Facturen
  table
    thead
      tr
        th Factuurnummer
        th tav
        th Aanmaakdatum
        th Acties
    tbody
      - @invoices.each do |invoice|
        tr
          td
            = invoice.id
          td
            = invoice.contact
          td
            = invoice.created_at
          td
            .field.is-grouped
              p.control
                = link_to 'Bekijk', invoice_path(id: invoice.id, format: :pdf), target: :_blank, class: 'button is-primary'
              p.control
                = link_to 'Details', invoice, class: 'button is-warning'
              p.control
                = link_to 'Verwijder', invoice, method: :delete, data: { confirm: 'Ben je zeker dat je deze factuur wilt verwijderen?' }, class: 'button is-danger'
  br
  = link_to 'Nieuwe factuur', new_invoice_path, class: 'button is-primary'
